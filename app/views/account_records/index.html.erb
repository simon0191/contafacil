<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Listing account_records</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Account</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Description</th>
            <th>Record type</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @account_records.each do |account_record| %>
            <tr>
              <td><%= account_record.account_id %></td>
              <td><%= account_record.amount %></td>
              <td><%= account_record.date %></td>
              <td><%= account_record.description %></td>
              <td><%= account_record.record_type %></td>
              <td><%= link_to 'Show', account_record %></td>
              <td><%= link_to 'Edit', edit_account_record_path(account_record) %></td>
              <td><%= link_to 'Destroy', account_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Account record', new_account_record_path %> 
    </div>
  </div>
</div>

