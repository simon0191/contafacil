<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Listing monthly_balances</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Initial balance</th>
            <th>Final balance</th>
            <th>Current balance</th>
            <th>Account</th>
            <th>Month</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @monthly_balances.each do |monthly_balance| %>
            <tr>
              <td><%= monthly_balance.initial_balance %></td>
              <td><%= monthly_balance.final_balance %></td>
              <td><%= monthly_balance.current_balance %></td>
              <td><%= monthly_balance.account_id %></td>
              <td><%= monthly_balance.month %></td>
              <td><%= link_to 'Show', monthly_balance %></td>
              <td><%= link_to 'Edit', edit_monthly_balance_path(monthly_balance) %></td>
              <td><%= link_to 'Destroy', monthly_balance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Monthly balance', new_monthly_balance_path %>

    </div>
  </div>
</div>      
